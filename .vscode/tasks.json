{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build HelloWordl",
			"command": "gcc",
			"args": [
				"-g",
				"Source/main.c",//"${file}",
				"Source/app.c",//"${file}",
				"Source/isolated.c",//"${file}",
				"-o",
				"exe/AdvancedC"//"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}